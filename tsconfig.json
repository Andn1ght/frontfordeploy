{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "lib": ["DOM", "ES2020"],
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true
  }
}